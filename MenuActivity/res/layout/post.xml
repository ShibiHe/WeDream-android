<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f6"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/post_EditText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.25"
        android:ems="10"
        android:text="record your life" >

        <requestFocus />
    </EditText>

    tools:context="tree.love.animtabsview.demo.MainActivity$PlaceholderFragment" >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/post_ImageButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="39dp"
            android:background="@drawable/post_button"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/post_SelectButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/photo_button"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>